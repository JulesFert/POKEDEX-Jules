{% extends "base-2.html.twig" %}
{% block body %}
<h2 class="details__title">Détails de {{pokemon.name}}</h2>

<div class="container__details">
    <section class="left__content">
        <img class="pokemon__img" src="{{asset('img/' ~ pokemon.number ~ '.png')}}" alt="image-pokemon">
    </section>

    <section class="right__content">
        <div class="test__flex">
            <div class="premier">
                <h3 class="details__pokemon__name">#{{pokemon.number}} {{pokemon.name}}</h3>
                <div class="container__type">

                    {# boucle for pour les types à faire ici #}
                        {# <div style="background-color:#{{ $type->color }};" class="details__type">{{ $type->name }}</div> #}
                    {#  #}

                </div>
            </div>
            <div class="deuxieme">
                <div class="second">
                    <h4>Description</h4>
                    <p class="description">{{pokemon.description}}</p>
                    <div class="container__size">
                        <h4 class="size">Taille</h4>
                        <p class="infos">{{pokemon.size}}m</p>
                        <h4 class="weight">Poids</h4>
                        <p class="infos">{{pokemon.weight}}kg</p>
                    </div>
                </div>
            </div>

        </div>
<div class="flex">
    <div class="first">
        <h4 class="stats__title">Statistiques</h4>
            <table>
                <tbody class="bodyTable">
                    <tr>
                        <th class="stat" scope="col">HP</th>
                        <th class="stat" scope="col">{{pokemon.hp}}</th>
                    </tr>
                    <tr>
                        <th class="stat" scope="col">Attaque</th>
                        <th class="stat" scope="col">{{pokemon.attack}}</th>
                    </tr>
                    <tr>
                        <th class="stat" scope="col">Defense</th>
                        <th class="stat" scope="col">{{pokemon.defense}}</th>
                    </tr>
                    <tr>
                        <th class="stat" scope="col">Attaque spé</th>
                        <th class="stat" scope="col">{{pokemon.speAttack}}</th>
                    </tr>
                    <tr>
                        <th class="stat" scope="col">Défense spé</th>
                        <th class="stat" scope="col">{{pokemon.speDefense}}</th>
                    </tr>
                    <tr>
                        <th class="stat" scope="col">Vitesse</th>
                        <th class="stat" scope="col">{{pokemon.speed}}</th>
                    </tr>
                </tbody>
            </table>
    </div>
</div>

    </section>
</div>

<div class="bottom_buttons">
    {# @if ($previousPokemonNumber)
        <div class="return">
            <a class="button" href="{{ route('pokemon-details', $previousPokemonNumber) }}">Précédent : <strong>{{$pokemons[$currentIndex - 1]->name}}</strong></a>
        </div>
    @endif
    <div class="return">
            <a class="button" href="{{ route('pokemon-list') }}">Revenir à la liste</a>
    </div>
    @if ($nextPokemonNumber)
        <div class="return">
            <a class="button" href="{{ route('pokemon-details', $nextPokemonNumber) }}">Suivant : <strong>{{$pokemons[$currentIndex + 1]->name}}</strong></a>
        </div>
    @endif #}
</div>
{% endblock %}